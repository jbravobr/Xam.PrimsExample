<?xml version="1.0" encoding="UTF-8"?>
<NavigationPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="IcatuzinhoApp.RegisterPage"
	xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True"
	xmlns:local="clr-namespace:IcatuzinhoApp;assembly=IcatuzinhoApp" 
	xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared" 
	Title="Cadastro"
	BackgroundColor="{ StaticResource AccentColor }">

	<x:Arguments>
		<Page>
			<ScrollView>
				<StackLayout Spacing="30" Margin="30">
					<StackLayout.Children>
						<Entry
							Placeholder="Nome"
							Style="{DynamicResource IcatuLoginEntryStyle}"
							Text="{ Binding Nome }" />

						<Entry
							Placeholder="E-mail" 
							Style="{DynamicResource IcatuLoginEntryStyle}"
							Text="{ Binding Email }" />

						<Entry
							Placeholder="Senha"
							Style="{DynamicResource IcatuLoginEntryStyle}"
							Text="{ Binding Senha}" />

						<Button Text="Cadastrar" 
								Style="{DynamicResource ButtonEntrar}"
								Command="{ Binding Cadastrar }" />
					</StackLayout.Children>
				</StackLayout>
			</ScrollView>
		</Page>
	</x:Arguments>
</NavigationPage>

